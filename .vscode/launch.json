{
  "configurations": [
    {
      "name": "Run Unit Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}\\node_modules\\jest\\bin\\jest.js",
      "args": [
          "--runInBand",
          "--no-cache"
      ],
      "preLaunchTask": "unitTestsDebugPreLaunchTask"
    },
    {
      "name": "Run Integration Tests",
      "type": "node",
      "request": "launch",
      "program": "./build-integration-test/integrationTests/index.js",
      "args": [
          "--runInBand",
          "--no-cache"
      ],
      "preLaunchTask": "IntegrationTestsDebugPreLaunchTask"
    },
    {
      "name": "Example",
      "type": "node",
      "request": "launch",
      "program": "./build-examples/examples/app/index.js",
      "args": [
          "--runInBand",
          "--no-cache"
      ],
      "preLaunchTask": "exampleDebugPreLaunchTask"
    },
    {
      "name": "Example (Error)",
      "type": "node",
      "request": "launch",
      "program": "./build-examples/examples/error-app/index.js",
      "args": [
          "--runInBand",
          "--no-cache"
      ],
      "preLaunchTask": "exampleDebugPreLaunchTask"
    },
  ]
}