{
  "configurations": [
    {
      "name": "Unit Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest-cli/bin/jest.js",
      "args": [
          "--runInBand",
          "--no-cache"
      ],
      "preLaunchTask": "unitTestsDebugPreLaunchTask"
    },
    {
      "name": "Example",
      "type": "node",
      "request": "launch",
      "program": "./build-examples/examples/app/index.js",
      "args": [
          "--runInBand",
          "--no-cache"
      ],
      "preLaunchTask": "exampleDebugPreLaunchTask"
    },
    {
      "name": "Example (Error)",
      "type": "node",
      "request": "launch",
      "program": "./build-examples/examples/error-app/index.js",
      "args": [
          "--runInBand",
          "--no-cache"
      ],
      "preLaunchTask": "exampleDebugPreLaunchTask"
    },
  ]
}